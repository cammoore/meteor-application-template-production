{
  "name": "mrbp",
  "private": true,
  "dependencies": {
    "@babel/runtime": "^7.17.9",
    "bootstrap": "^5.1.3",
    "classnames": "^2.3.1",
    "core-js": "^3.22.3",
    "faker": "^5.5.3",
    "fast-check": "^2.17.0",
    "graphql": "^14.5.8",
    "lodash": "^4.17.21",
    "meteor-node-stubs": "^1.2.3",
    "moment": "^2.29.1",
    "prop-types": "^15.7.2",
    "react": "^16.14.0",
    "react-bootstrap": "^2.3.1",
    "react-bootstrap-icons": "^1.8.2",
    "react-dom": "^16.14.0",
    "react-router": "^5.3.1",
    "react-router-dom": "^5.3.1",
    "simpl-schema": "^1.12.0",
    "sweetalert": "^2.1.2",
    "uniforms": "^3.9.1",
    "uniforms-bootstrap5": "^3.9.1",
    "uniforms-bridge-simple-schema-2": "^3.9.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.5",
    "babel-eslint": "^10.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-meteor": "^7.3.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.5.0",
    "eslint-utils": "^2.1.0",
    "node-sass": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.13",
    "postcss-cli": "^9.1.0",
    "puppeteer": "^13.7.0",
    "testcafe": "^1.18.6"
  },
  "scripts": {
    "start": "npm-run-all css start-meteor",
    "start-meteor": "meteor --no-release-check --exclude-archs web.browser.legacy,web.cordova --settings ../config/settings.development.json",
    "css-compile": "node-sass --include-path node_modules --output-style compressed --source-map true --source-map-contents true --precision 6 scss -o imports/startup/client/css/",
    "css-prefix": "postcss imports/startup/client/css/theme.css --replace --use autoprefixer --map",
    "css": "npm-run-all css-compile css-prefix",
    "lint": "eslint --quiet --fix --ext .jsx --ext .js ./imports && eslint --quiet --ext .js ./tests",
    "test-unit": "cross-env TEST_BROWSER_DRIVER=puppeteer MOCHA_TIMEOUT=150000 meteor test --exclude-archs web.browser.legacy,web.cordova --no-release-check --once --driver-package meteortesting:mocha --port 3100",
    "test-integration": "cross-env METEOR_NO_RELEASE_CHECK=1 TEST_BROWSER_DRIVER=puppeteer meteor test --full-app --once --driver-package meteortesting:mocha --port 3100",
    "test-acceptance-development": "testcafe chrome tests/*.testcafe.js",
    "test-acceptance-development-single": "testcafe chrome tests/*.testcafe.js -t \"Test that signin and signout work\"",
    "test-acceptance-ci": "testcafe chrome:headless tests/*.testcafe.js -q --app \"meteor npm run start\""
  }
}
